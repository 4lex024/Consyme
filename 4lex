local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Rayfield Example Window",
   Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
   LoadingTitle = "Rayfield Interface Suite",
   LoadingSubtitle = "by Sirius",
   ShowText = "Rayfield", -- for mobile users to unhide rayfield, change if you'd like
   Theme = "Default", -- Check https://docs.sirius.menu/rayfield/configuration/themes

   ToggleUIKeybind = "K", -- The keybind to toggle the UI visibility (string like "K" or Enum.KeyCode)

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },

   KeySystem = false, -- Set this to true to use our key system
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided", -- Use this to tell the user how to get a key
      FileName = "Key", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"Hello"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
})

local MainTab = Window:CreateTab("Home", 4483362458) 

-- Daftar semua animatronics dalam satu tabel
local animatronicsNames = {"Bonnie", "Chica", "Cupcake", "Foxy", "Freddy", "Puppet"}

local Toggle = MainTab:CreateToggle({
    Name = "ESP All Animatronics (Merah)",
    CurrentValue = false,
    Flag = "ToggleAllAnimESP",
    Callback = function(Value)
        _G.ESPAllEnabled = Value -- Variabel global untuk status toggle

        if _G.ESPAllEnabled then
            print("Semua ESP Animatronics Aktif")
            task.spawn(function()
                -- Path folder utama
                local animFolder = workspace:FindFirstChild("Game") 
                    and workspace.Game:FindFirstChild("Animatronics") 
                    and workspace.Game.Animatronics:FindFirstChild("Animatronics")

                if animFolder then
                    for _, name in pairs(animatronicsNames) do
                        local target = animFolder:FindFirstChild(name)
                        if target then
                            local espName = name .. "ESP"
                            local highlight = target:FindFirstChild(espName)
                            
                            if not highlight then
                                highlight = Instance.new("Highlight")
                                highlight.Name = espName
                                highlight.Adornee = target
                                highlight.FillColor = Color3.fromRGB(255, 0, 0)
                                highlight.OutlineColor = Color3.fromRGB(255, 0, 0)
                                highlight.FillTransparency = 0.5
                                highlight.OutlineTransparency = 0
                                highlight.Parent = target
                            else
                                highlight.Enabled = true
                            end
                        end
                    end
                else
                    warn("Folder Animatronics tidak ditemukan!")
                end
            end)
        else
            print("Semua ESP Animatronics Nonaktif")
            task.spawn(function()
                local animFolder = workspace:FindFirstChild("Game") 
                    and workspace.Game:FindFirstChild("Animatronics") 
                    and workspace.Game.Animatronics:FindFirstChild("Animatronics")

                if animFolder then
                    for _, name in pairs(animatronicsNames) do
                        local target = animFolder:FindFirstChild(name)
                        if target then
                            local highlight = target:FindFirstChild(name .. "ESP")
                            if highlight then
                                highlight.Enabled = false
                            end
                        end
                    end
                end
            end)
        end
    end,
})
local Toggle = MainTab:CreateToggle({
    Name = "ESP Fuse (Hijau - All 3)",
    CurrentValue = false,
    Flag = "ToggleFuseESP",
    Callback = function(Value)
        _G.FuseESPEnabled = Value

        if _G.FuseESPEnabled then
            print("Mencari semua Fuse...")
            task.spawn(function()
                -- GetDescendants mencari ke DALAM folder/model manapun
                for _, item in pairs(workspace:GetDescendants()) do
                    if item.Name == "Fuse" then
                        local existingHighlight = item:FindFirstChild("FuseHighlight")
                        
                        if not existingHighlight then
                            local highlight = Instance.new("Highlight")
                            highlight.Name = "FuseHighlight"
                            highlight.Adornee = item
                            highlight.FillColor = Color3.fromRGB(0, 255, 0) -- Hijau
                            highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
                            highlight.FillTransparency = 0.5
                            highlight.OutlineTransparency = 0
                            highlight.Parent = item
                            print("Fuse ditemukan dan diberi Highlight!")
                        else
                            existingHighlight.Enabled = true
                        end
                    end
                end
            end)
        else
            print("ESP Fuse Nonaktif")
            for _, item in pairs(workspace:GetDescendants()) do
                if item.Name == "Fuse" then
                    local existingHighlight = item:FindFirstChild("FuseHighlight")
                    if existingHighlight then
                        existingHighlight.Enabled = false
                    end
                end
            end
        end
    end,
})

-- Daftar item dan nama unik untuk ESP-nya
local itemsToESP = {
    {Path = workspace:FindFirstChild("Phillips screwdriver"), Name = "ScrewdriverESP"},
    {Path = workspace:FindFirstChild("Photo Camera"), Name = "CameraESP"},
    {Path = workspace:FindFirstChild("Pliers"), Name = "PliersESP"}
}

local Toggle = MainTab:CreateToggle({
    Name = "ESP Tools (Kuning)",
    CurrentValue = false,
    Flag = "ToggleToolsESP",
    Callback = function(Value)
        -- Daftar item yang ingin diberi ESP
        local toolNames = {
            "Pliers", 
            "Phillips screwdriver", 
            "Photo Camera"
        }

        if Value then
            print("ESP Tools Aktif")
            task.spawn(function()
                for _, name in pairs(toolNames) do
                    -- Mencari item langsung di workspace
                    local item = workspace:FindFirstChild(name)
                    
                    if item then
                        local espName = name .. "_ESP"
                        local existingHighlight = item:FindFirstChild(espName)
                        
                        if not existingHighlight then
                            local highlight = Instance.new("Highlight")
                            highlight.Name = espName
                            highlight.Adornee = item
                            highlight.FillColor = Color3.fromRGB(255, 255, 0) -- Kuning
                            highlight.OutlineColor = Color3.fromRGB(255, 255, 255) -- Putih
                            highlight.FillTransparency = 0.4
                            highlight.OutlineTransparency = 0
                            highlight.Parent = item
                        else
                            existingHighlight.Enabled = true
                        end
                    else
                        warn("Item " .. name .. " tidak ditemukan di Workspace!")
                    end
                end
            end)
        else
            print("ESP Tools Nonaktif")
            -- Mematikan semua highlight pada item tersebut
            for _, name in pairs(toolNames) do
                local item = workspace:FindFirstChild(name)
                if item then
                    local existingHighlight = item:FindFirstChild(name .. "_ESP")
                    if existingHighlight then
                        existingHighlight.Enabled = false
                    end
                end
            end
        end
    end,
})

local Toggle = MainTab:CreateToggle({
    Name = "ESP Bau Items (Biru)",
    CurrentValue = false,
    Flag = "ToggleBauESP",
    Callback = function(Value)
        local bauFolder = workspace:FindFirstChild("Map") 
            and workspace.Map:FindFirstChild("Baus") 
            and workspace.Map.Baus:FindFirstChild("Bau")

        if not bauFolder then
            warn("Folder workspace.Map.Baus.Bau tidak ditemukan!")
            return
        end

        local children = bauFolder:GetChildren()
        -- Daftar indeks yang kamu minta: 1, 2, dan 3
        local targets = {children[1], children[2], children[3]}

        if Value then
            print("ESP Bau Aktif")
            for i, target in pairs(targets) do
                if target then
                    local espName = "BauESP_" .. i
                    local highlight = target:FindFirstChild(espName)
                    
                    if not highlight then
                        highlight = Instance.new("Highlight")
                        highlight.Name = espName
                        highlight.Adornee = target
                        highlight.FillColor = Color3.fromRGB(0, 0, 255) -- Biru
                        highlight.OutlineColor = Color3.fromRGB(255, 255, 255) -- Outline Putih agar kontras
                        highlight.FillTransparency = 0.5
                        highlight.OutlineTransparency = 0
                        highlight.Parent = target
                    else
                        highlight.Enabled = true
                    end
                end
            end
        else
            print("ESP Bau Nonaktif")
            for i, target in pairs(targets) do
                if target then
                    local highlight = target:FindFirstChild("BauESP_" .. i)
                    if highlight then
                        highlight.Enabled = false
                    end
                end
            end
        end
    end,
})
